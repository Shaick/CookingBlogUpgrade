<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Registry System</h2>
            <span>Cadastra-se</span>
            <form action="/signup" enctype="multipart/form-data" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Nickname ou Apelido" name="nick" id="nick">
                <small class="form-text text-muted text-left">Enter your user name</small>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email" id="email">
                <small class="form-text text-muted text-left">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="password" id="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>