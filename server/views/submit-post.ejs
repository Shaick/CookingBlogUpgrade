<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Faça uma Postagem</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Compartilhe algo para o mundo.</p>
    </div>
  </div>
  
  <div class="row justify-content-center">
  
    <% if(infoSubmitObj != '') { %>
      <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
  
    <% if(infoErrorsObj != '') { %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>
  
    <div class="col-8">
  
      <form action="/submit-post" enctype="multipart/form-data" method="POST">
      
        <div class="row g-3">
   
          <div class="col-12">
            <label for="titulo" class="form-label">Titulo</label>
            <input type="text" name="titulo" id="titulo" class="form-control" required>
          </div>

          <div class="col-12">
            <label for="subtitulo" class="form-label">Sub Titulo</label>
            <input type="subtitulo" name="subtitulo" id="subtitulo" class="form-control">
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label">Descrição</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label">Insight's</label><br>
            <small>Example: Faith</small>
            <div class="keywordsList">
              <div class="keywordsDiv mb-1">
                <input type="text" name="keywords" class="form-control">
              </div>
            </div>
          </div>
  
          <div class="col-12">
            <button type="button" class="btn btn-outline-primary" id="addKeywordsBtn">+ Insight</button>
          </div>
  
          <div class="col-12">
            <label for="category">Categoria:</label>
            <select class="form-select form-control" name="category" aria-label="Category">
              <% if(categories != '') { %>
                <option selected>Selecione uma Categoria</option>
                <% categories.forEach(function(category, index) { %>
                   <option value="<%= category.name  %>"><%= category.name  %> </option> 
                      <% }) %>
                      <% } %> 
            </select>
          </div>
  
          <div class="col-12">
            <label for="image">Imagem:</label>
            <input type="file" class="form-control" name="image" accept="image/*">
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Postar</button>
          </div>
  
        </div>
      
      </form>
  
    </div>
  </div>